<main>
    <form action="/tags/add" method="POST">
        <label>Name: <input type="text" name="name"></label>
        <button>Submit</button>
    </form>
    <section class="tags-container">
        <ul class="tags">
            {{#each tags}}
            <li class="tag"><a href="/tags/{{id}}">{{name}}</a></li>
            {{/each}}
        </ul>
    </section>
</main>